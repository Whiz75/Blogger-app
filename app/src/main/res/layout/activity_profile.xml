<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProfileActivity">

    <RelativeLayout
        android:id="@+id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="405dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:background="@color/deep_sky_blue"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/close_profile_icon"
                android:layout_marginTop="5dp"
                android:layout_width="40dp"
                android:contentDescription="profile back imageview descr"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_close"
                android:tint="@color/white"/>

            <!--<ImageView
                android:id="@+id/profile_edit_icon"
                android:layout_marginTop="5dp"
                android:layout_width="40dp"
                android:contentDescription="profile back imageview descr"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_edit"
                android:tint="@color/white"/>-->

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:layout_width="150dp"
                android:contentDescription="profile imageview descr"
                android:layout_height="150dp"
                android:src="@drawable/ic_account_circle_black_24dp"
                android:tint="@color/white"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/white"
                android:layout_below="@id/close_profile_icon"/>

           <!-- <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/profile"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>-->

            <TextView
                android:id="@+id/profile_combined_text"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Whiz Khotsoka"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="21sp"
                android:layout_below="@id/profile_image"/>
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/followers_cv"
            android:layout_width="400dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="275dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:baselineAligned="false">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Photos"
                        android:textSize="20sp"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:paddingTop="10dp"
                        android:textColor="@color/deep_sky_blue"/>
                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="followers"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="125"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:paddingTop="10dp"
                        android:textColor="@color/deep_sky_blue"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"

                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="following"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="120"
                        android:textStyle="bold"
                        android:textSize="20sp"

                        android:paddingTop="10dp"
                        android:textColor="@color/deep_sky_blue"/>
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/profile_details_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="6dp"
        android:layout_below="@id/profile_layout"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            tools:ignore="MissingConstraints"
            android:layout_below="@id/profile_layout"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:id="@+id/email_layout"
                android:orientation="horizontal"
                android:paddingStart="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="RtlSymmetry,UseCompoundDrawables">

                <ImageView
                    android:id="@+id/email_drawable"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_email"
                    android:tint="@color/deep_sky_blue"
                    android:contentDescription="email icon descr" />

                <TextView
                    android:id="@+id/profile_email_text"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:text="email"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/phone_layout"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingStart="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/email_layout"
                tools:ignore="RtlSymmetry,UseCompoundDrawables">

                <ImageView
                    android:id="@+id/phone_drawable"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_account_circle_black_24dp"
                    android:tint="@color/deep_sky_blue"
                    android:contentDescription="phone icon descr" />
                <TextView
                    android:id="@+id/profile_name_text"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:text="name"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/add_layout"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:paddingStart="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone_layout"
                tools:ignore="RtlSymmetry,UseCompoundDrawables">

                <ImageView
                    android:id="@+id/add_drawable"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:tint="@color/deep_sky_blue"
                    android:src="@drawable/ic_account_circle_black_24dp"
                    android:contentDescription="add icon decsr" />

                <TextView
                    android:id="@+id/profile_surname_text"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:text="surname"/>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/update_button"
        android:textColor="@color/white"
        android:background="@color/deep_sky_blue"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Done"
        tools:ignore="MissingConstraints"
        android:layout_below="@id/profile_details_cv"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>